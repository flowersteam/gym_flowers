<mujoco model="reacher">
	<compiler angle="radian" inertiafromgeom="true"/>
	<default>
		<joint armature="1" damping="1" limited="true"/>
		<geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
	</default>
	<option gravity="0 0 -9.81" integrator="RK4" timestep="0.01"/>
	<worldbody>
		<!-- Arena -->
		<geom conaffinity="0" contype="0" name="ground" pos="0 0 0" rgba="2 2 2 1" size="1.5 1.5 10" type="plane"/>
		<geom conaffinity="0" fromto="-1.5 -1.5 .01 1.5 -1.5 .03" name="sideS" rgba="2 0 0 1" size=".06" type="capsule"/>
		<geom conaffinity="0" fromto=" 1.5 -1.5 .01 1.5  1.5 .03" name="sideE" rgba="2 0 0 1" size=".06" type="capsule"/>
		<geom conaffinity="0" fromto="-1.5  1.5 .01 1.5  1.5 .03" name="sideN" rgba="2 0 0 1" size=".06" type="capsule"/>
		<geom conaffinity="0" fromto="-1.5 -1.5 .01 -1.5 1.5 .03" name="sideW" rgba="2 0 0 1" size=".06" type="capsule"/>
		<!-- Arm -->
		<geom conaffinity="0" contype="0" fromto="0 0 0 0 0 0.06" name="root" rgba="0 0 0 1" size=".033" type="cylinder"/>
		<body name="body0" pos="0 0 .05">
			<geom fromto="0 0 0 0.5 0 0" name="link0" rgba="0 0 0 1" size=".03" type="capsule"/>
			<joint axis="0 0 1" limited="false" name="joint0" pos="0 0 0" range='-3.15 3.15' type="hinge"/>
			<body name="body1" pos="0.5 0 0">
				<joint axis="0 0 1" limited="true" name="joint1" pos="0 0 0" range="-3.15 3.15" type="hinge"/>
				<geom fromto="0 0 0 0.3 0 0" name="link1" rgba="0.5 0.5 0.5  1" size=".03" type="capsule"/>
                <body name="body2" pos="0.3 0 0">
                    <joint axis="0 0 1" limited="true" name="joint2" pos="0 0 0" range="-3.15 3.15" type="hinge"/>
                    <geom fromto="0 0 0 0.2 0 0" name="link2" rgba="1 1 1 1" size=".03" type="capsule"/>
                    <body name="fingertip" pos="0.25 0 0">
                        <geom contype="0" name="fingertip" pos="0 0 0" rgba="0.0 0.8 0.6 1" size=".05" type="sphere"/>
                    </body>
                </body>
			</body>
		</body>
		<!-- Target -->
		<body name="target" pos=".1 -.1 .05">
			<joint armature="0" axis="1 0 0" damping="0" limited="true" name="target_x" pos="0 0 0" range="-1.5 1.5" ref=".1" stiffness="0" type="slide"/>
			<joint armature="0" axis="0 1 0" damping="0" limited="true" name="target_y" pos="0 0 0" range="-1.5 1.5" ref="-.1" stiffness="0" type="slide"/>
			<geom conaffinity="0" contype="0" name="target" pos="0 0 0" rgba="2 0 0 1" size=".05" type="sphere"/>
		</body>
        <!-- Stick -->
		<body name="stick" pos="-.68 -.55 .05">
            <freejoint/>
            <geom type="box" size=".02 .25 .025" rgba="0 .9 .9 1"/>
            <body name="stick_start" pos="0 -.25 0">
                <geom contype="0" name="stick_start" pos="0 0 0" rgba="0 .9 .9 1" size=".05" type="sphere"/>
            </body>
            <body name="stick_tip" pos="0 .25 0">
                <geom contype="0" name="stick_tip" pos="0 0 0" rgba="1 0 1 1" size=".05" type="sphere"/>
            </body>
        </body>
        <!-- Object -->
		<body name="object" pos=".5 .5 .05">
            <freejoint/>
            <geom type="box" size=".05 .05 .05" rgba="1 0 1 1"/>
        </body>
	</worldbody>
	<actuator>
		<motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="joint0"/>
		<motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="joint1"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="joint2"/>
	</actuator>
</mujoco>